@using Agent.Web.ViewModels
@model BookViewModel

<div class="col-lg-4 col-md-6">
    <form asp-controller="Home" asp-action="Buy" method="post" asp-route-bookId="@Model.Id">
        <div class="product">
            <div class="image"><a href="shop-detail.html"><img src="~/images/@Model.Image" alt="" class="img-fluid image1"></a></div>
            <div class="text">
                <h3 class="h5"><a href="shop-detail.html">@Model.Title</a></h3>
                <p class="price">
                    @Model.Price
                </p>
                <p class="text-center">
                    <button type="submit"style="width: 100%;" class="btn btn-outline-dark"><i class="fa fa-shopping-cart"></i> Buy</button>
                </p>
            </div>
        </div>
    </form>
</div>